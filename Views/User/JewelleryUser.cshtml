@{
    ViewBag.Title = "Dress";
    Layout = "~/Views/Shared/UserNavBar.cshtml";
}


@using Tabi.Models
@model IEnumerable<Item>


<body >
     <div>
            <label class="text-center" style="font-size:70px;font-family:Stencil;color:deepskyblue;width:100%;"> Jewellery</label>
        </div>
        <br>
        <br />

    <div>
        <div class="row">
            @foreach (Item s in Model)
            {
                <div class="col-sm-4 col-md-4 col-lg-4">
                    <div class="thumbnail"style="margin-left:5%">
                        <img style="max-height:300px;max-width:300px" src="~/Content/Items/@s.Picture" />
                        <hr />
                        <div class="caption">

                            <div class="row">

                                <p class="">Name: @s.Name</p><h4 class="">Price: @s.Price</h4>
                                <a href="/User/shop/@s.Id">add to cart</a>
                               
                            </div>
                            <div class="row">

                                <!--<a href="#" class="btn btn-default" >Hello</a>-->

                            </div>


                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>